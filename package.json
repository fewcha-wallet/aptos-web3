{
  "name": "@fewcha/root",
  "version": "0.0.3",
  "author": "fewcha.app",
  "license": "MIT",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --npm-client=yarn",
    "build": "lerna run build --npm-client=yarn --parallel --scope @fewcha/web3 --scope @fewcha/web3-react --scope @fewcha/aptos",
    "publish": "lerna publish",
    "test": "lerna run test --npm-client=yarn --stream",
    "bs": "yarn bootstrap",
    "nx": "nx"
  },
  "dependencies": {
    "@commitlint/config-conventional": "^17.0.2",
    "@types/node": "^18.0.0",
    "commitlint": "^17.0.2",
    "lerna": "^5.1.4",
    "lint-staged": "^13.0.2",
    "nx": "^14.3.6",
    "typescript": "^4.7.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "npx --no-install commitlint --edit \"$1\"",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,css,json,md}": [
      "prettier --write"
    ]
  }
}
